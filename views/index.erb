<table class='table table-hover table-striped'>
	<thead>
		<tr>
			<th>Hanzi</th>
			<th>Eng</th>
			<th>Pinyin</th>
		</tr>
	</thead>
	<% @words.each do |w| %>
		<tbody>
			<tr>
				<td><%= w["hanzi"] %></td>
				<td><%= w["eng"] %></td>
				<td><%= w["pinyin"] %></td>
			</tr>
		</tbody>
	<% end %>
</table>
<a href=/addword>Add a new word</a>
